<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Display.Settings">
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="106dp"
            android:layout_height="96dp"
            android:src="@drawable/na"
            app:civ_border_width="2dp"

            app:civ_border_color="#FF000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textUsername"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="UserName:"
                android:textSize="16dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textGmail"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="Gmail:"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ht24">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textSize="16dp"
            android:id="@+id/btnhistory_view"
            android:text="Lịch Sử Xem"
            android:textColor="@color/white"
            style="?android:attr/buttonBarButtonStyle"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:src="@drawable/wfvr">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textSize="16dp"
            android:id="@+id/btnfavorite"
            android:text="Bộ Truyện Yêu Thích "
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lanw"
            android:layout_marginTop="15dp"
            android:textColor="@color/white">

        </ImageView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:id="@+id/btnLanguge"
            android:text="Ngôn Ngữ"
            style="?android:attr/buttonBarButtonStyle"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/sp">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Hỗ Trợ Khách Hàng"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            android:id="@+id/btnSupport"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/contact">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            style="?android:attr/buttonBarButtonStyle"
            android:text="Phương Thức Liên Hệ"
            android:textSize="16dp"
            android:id="@+id/btnContact"
            >

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/chang3">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Đổi Mật Khẩu"
            android:textColor="@color/white"
            style="?android:attr/buttonBarButtonStyle"
            android:textSize="16dp"
            android:id="@+id/ChangePass"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/settingsw">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Đăng Xuất"

            android:textColor="@color/white"
            style="?android:attr/buttonBarButtonStyle"
            android:textSize="16dp"
            android:id="@+id/btnSignOut"
            >

        </Button>
    </LinearLayout>
</LinearLayout>